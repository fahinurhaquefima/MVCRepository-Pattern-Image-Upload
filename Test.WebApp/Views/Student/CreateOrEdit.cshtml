@model Test.WebApp.ViewModel.StudentVm
@{

}


<div class="Container" >
    <form asp-action="CreateOrEdit" asp-controller="Student" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" asp-for=Name class="form-control">
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" asp-for=Email class="form-control">
        </div>
        <div class="mb-3">
            <label for="Phone" class="form-label">Phone</label>
            <input type="number" asp-for=Phone class="form-control">
        </div>
        <div class="mb-3">
            <label for="RegistrationId" class="form-label">RegistrationId</label>
            <input type="number" asp-for=RegistrationId class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Image" class="form-label">Image</label>
            <input type="file" name="photo" asp-for=Image class="form-control" id="FileUpload" onchange="PreviewImage()">
        </div>
        <div class="mb-3 mt-3" style="text-align:end">
            <img src="~/images/student/@Model.Image"  id="UploadFile" class="img-thumbnail" style="width:170px;" />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
@section Scripts {
    <script>
        function PreviewImage() {
            var preview = document.getElementById("UploadFile");
            var fileInput = document.getElementById("FileUpload");

            // Ensure that the file input has files
            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();

                
                reader.onload = function (e) {
                    preview.src = e.target.result; // Set the source of the preview image to the base64-encoded image data
                };

                
                reader.readAsDataURL(fileInput.files[0]);
            }
        }
    </script>
}